---
import { t } from "i18next";
---

<section class="py-16 bg-gradient-to-b from-white to-purple-50/30">
  <div class="container mx-auto px-4">
    <h2
      class="text-3xl font-bold text-center mb-12 text-purple-800 dark:text-purple-300"
    >
      {t("features.title")}
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- 趣味音乐学习 -->
      <div class="feature-card group">
        <div class="feature-icon bg-purple-100 dark:bg-purple-900">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"
            ></path>
          </svg>
        </div>
        <h3 class="feature-title">{t("features.music.title")}</h3>
        <p class="feature-description">{t("features.music.description")}</p>
      </div>

      <!-- 即时反馈机制 -->
      <div class="feature-card group">
        <div class="feature-icon bg-green-100 dark:bg-green-900">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="feature-title">{t("features.feedback.title")}</h3>
        <p class="feature-description">{t("features.feedback.description")}</p>
      </div>

      <!-- 循序渐进的难度 -->
      <div class="feature-card group">
        <div class="feature-icon bg-blue-100 dark:bg-blue-900">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
          </svg>
        </div>
        <h3 class="feature-title">{t("features.difficulty.title")}</h3>
        <p class="feature-description">
          {t("features.difficulty.description")}
        </p>
      </div>

      <!-- 无需安装的便利性 -->
      <div class="feature-card group">
        <div class="feature-icon bg-yellow-100 dark:bg-yellow-900">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
            ></path>
          </svg>
        </div>
        <h3 class="feature-title">{t("features.convenience.title")}</h3>
        <p class="feature-description">
          {t("features.convenience.description")}
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  .feature-card {
    @apply bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg transform transition-all duration-300 hover:-translate-y-2 hover:shadow-xl;
  }

  .feature-icon {
    @apply w-16 h-16 rounded-full flex items-center justify-center text-purple-600 dark:text-purple-300 mb-4 transform transition-transform group-hover:scale-110;
  }

  .feature-title {
    @apply text-xl font-semibold mb-3 text-gray-800 dark:text-gray-100;
  }

  .feature-description {
    @apply text-gray-600 dark:text-gray-300 leading-relaxed;
  }
</style>
