---
import { t } from "i18next";
---

<section class="py-16 bg-gradient-to-b from-light to-neutral-light/30">
  <div class="container mx-auto px-4">
    <h2 class="gradient-title text-3xl font-bold text-center mb-12">
      {t("features.title")}
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- 趣味音乐学习 -->
      <div class="feature-card group">
        <div class="feature-icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"
            ></path>
          </svg>
        </div>
        <h3 class="feature-title">{t("features.music.title")}</h3>
        <p class="feature-description">{t("features.music.description")}</p>
      </div>

      <!-- 即时反馈机制 -->
      <div class="feature-card group">
        <div class="feature-icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="feature-title">{t("features.feedback.title")}</h3>
        <p class="feature-description">{t("features.feedback.description")}</p>
      </div>

      <!-- 循序渐进的难度 -->
      <div class="feature-card group">
        <div class="feature-icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
          </svg>
        </div>
        <h3 class="feature-title">{t("features.difficulty.title")}</h3>
        <p class="feature-description">
          {t("features.difficulty.description")}
        </p>
      </div>

      <!-- 无需安装的便利性 -->
      <div class="feature-card group">
        <div class="feature-icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
            ></path>
          </svg>
        </div>
        <h3 class="feature-title">{t("features.convenience.title")}</h3>
        <p class="feature-description">
          {t("features.convenience.description")}
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  .feature-icon {
    @apply w-16 h-16 rounded-full flex items-center justify-center mb-4 transform transition-transform group-hover:scale-110;
    color: var(--color-primary);
    background-color: var(--color-light-hover);
  }

  .dark .feature-icon {
    color: var(--color-primary-light);
    background-color: var(--color-primary-dark);
  }

  .feature-title {
    @apply text-xl font-semibold mb-3;
    color: var(--color-text-primary);
  }

  .feature-description {
    @apply leading-relaxed;
    color: var(--color-text-secondary);
  }

  .feature-card {
    @apply p-6 rounded-xl transition-all duration-300;
    background: var(--color-light);
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .feature-card:hover {
    background: var(--color-light-hover);
    transform: translateY(-2px);
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  .dark .feature-card {
    background: var(--color-light-hover);
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.2),
      0 2px 4px -1px rgba(0, 0, 0, 0.1);
  }

  .dark .feature-card:hover {
    background: var(--color-light);
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.2),
      0 4px 6px -2px rgba(0, 0, 0, 0.15);
  }
</style>
