---
import config from "../config/config.json";
import SEO from "../components/SEO.astro";
import "../styles/colors.css";
import "../styles/gradients.css";

interface Props {
  title?: string;
}

const { title = config.website.title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO title={title} description={config.game.description} />
    <!-- AddToAny BEGIN -->
    <script async src="https://static.addtoany.com/menu/page.js"></script>
    <!-- AddToAny END -->
  </head>
  <body class="antialiased bg-light text-text-primary">
    <slot />
    <style is:global>
      html {
        background-color: var(--color-light);
        color: var(--color-text-primary);
      }

      body {
        margin: 0;
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          "Open Sans",
          "Helvetica Neue",
          sans-serif;
      }

      @media (prefers-color-scheme: dark) {
        html {
          background-color: var(--color-light);
          color: var(--color-text-primary);
        }
      }
    </style>
  </body>
</html>
